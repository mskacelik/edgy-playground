MVNW_REPOURL="https://repo.maven.apache.org/maven2"
MVNW_VERSION="3.6.4"

if [ ! -f ".mvn/wrapper/maven-wrapper.jar" ]; then
  echo "Downloading Maven Wrapper..."
  mkdir -p .mvn/wrapper
  curl -fsSL -o .mvn/wrapper/maven-wrapper.jar "$MVNW_REPOURL/org/apache/maven/wrapper/maven-wrapper/$MVNW_VERSION/maven-wrapper-$MVNW_VERSION.jar"
fi

java -jar .mvn/wrapper/maven-wrapper.jar "$@"
